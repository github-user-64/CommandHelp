<Window x:Class="cs1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cs1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">

    <StackPanel VerticalAlignment="Center">
        <Border Height="200" Margin="10, 10, 10, 10" Background="WhiteSmoke">
            <TextBlock Name="msg" VerticalAlignment="Bottom"/>
        </Border>
        <TextBox Name="tb" Margin="10" TextChanged="TextBox_TextChanged" KeyDown="TextBox_KeyDown"/>
        <TextBlock Name="tb2" Margin="10, 0, 10, 10" Background="WhiteSmoke"/>
        <TextBlock Name="tb1" Margin="10, 0, 10, 10" Background="WhiteSmoke"/>
    </StackPanel>
</Window>
